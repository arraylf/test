extends layout

block content
  h1 用户注册
  form
    .form-group
      laber(for='name') 用户名:
      input.form-control(type='name',id='name')
      laber(for='pwd') 密码：
      input.form-control(type='password',id='pwd')
      laber(for='rpwd') 重复输入密码：
      input.form-control(type='password',id='rpwd')
    button.btn.btn-primary(type='submit') 注册
